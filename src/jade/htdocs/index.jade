extends ../layout/global

block seo
  title Commerce Checking
  meta(name="description" content="Commerce Checking description needed")

block content
  header
    .masthead
      .masthead__container
        .masthead__logo.pt
          a(href="index.html").masthead__home-link: img(src='img/CommerceFDIC.png')
          
        .masthead__utilities
          form.masthead__search(role="search", method="get", action="")
            .masthead__fieldbox
              input.masthead__input(type="search", placeholder="", value="", name="s", title="")
              button.masthead__button(type="submit")
                icon(name="ei-search" size="s")
 
          .masthead__minor-nav
            each link in nav.minor
              a(href='#{link.url}').masthead__link= link.page
     
    nav.nav
      ul.nav__container
        each link in nav.main
          li.nav__item: a(href='#{link.url}').nav__link= link.page
        
    .banner
      .banner__container
        .banner__content
          h2.banner__headline Design your dream checking account today
          ul.banner__list
            li.banner__item--col-1-3
              p.baner__number 1
              p.banner__text Choose the checking account features that are right for you
          p: a.banner__button Build Your Own

    .core
      .core__container
        .breadcrumb
          a(href='').breadcrumb__text-link Commerce Bank
          a(href='').breadcrumb__text-link Personal Banking
          span Checking
        .callout
          h2.callout__headline Discover the checkking account thats perfect for you.
          p.callout__text Want us to recommend the best Commerce Checking account for you? Answer the questions below to help us narrow down your results and provide the right options for you.
        .coltainer
          .main-col--col-2-3
            
            .picker__coltainer
              h2.heading Get a Recommendation
              a(href='').picker__text-link reset
              .choice__coltainer
                .choice__item--col-1-4
                  p.choice__text Do you have a Commerce Bank Credit Card, Loan or Mortgage?
                  .choice__boolean
                  a(href='') yes
                  a(href='') no

            ul.accounts__list
              li.accounts__item
                .accounts--col-2-3
                  h2.accounts__heading Build Your Own
                  h3.accounts__subheading The checking account of your dreams
                  p.accounts__text Customize your account to fit your unique needs with our Build Your Own Account option.
                .accounts--col-1-3
                  p: a(href='').account__button

          aside.sidebar__col-1-3
            
            .sidebar__module
              h2.sidebar__heading Not sure which account is right for you?
              p.sidebar__text Inform your decision with a detailed side-by-side comparison.
              a(href=).sidebar__button Compare All Accounts
              
            .sidebar__module
              h2.sidebar__heading Service Center
              ul.sidebar__list
                li.sidebar__item: a(href='').sidebar__text-link Frequently Asked Questions
                li.sidebar__item: a(href='').sidebar__text-link Frequently Asked Questions
                li.sidebar__item: a(href='').sidebar__text-link Frequently Asked Questions
            
            .sidebar__module
              ul.sidebar__list
                li.sidebar__ltem
                  .sidebar__media--col-1-3
                    img(src='')
                  .sidebar__content--col-2-3
                    h2.sidebar__title Apple Pay
                    p.sidebar__text A new way to pay with your Commerce bank Credit and Debit Card!

        .callout
          h2.callout__headline Compare Accounts
          p.callout__text Want to dig in deeper before choosing your checking account? use our comparison chart to see which account offers all the features and benefits you need.
          a(href='').print

        nav.account-nav
          ul.account-nav__list
            li.account-nav__item
              a(href='').account-nav__button Build Your Own
            li.account-nav__item
              a(href='').account-nav__button myRewards
            li.account-nav__item
              a(href='').account-nav__button Build Your Own
              
        .account-nav__list
          li.account-nav__item--feature
            h3.account__title Money Management
            ul.account-feature__list
              li.account-feature__item Free Standard Checking
              li.account-feature__item Online Banking & Bill Pay
              
          li.account-nav__item--suggested
            h3.account__title Build Your Own
            h4.account__subtitle Most popular option
            p: a(href='') Sign Up
            ul.account-feature__list
              li.account-feature__item -
              li.account-feature__item x
              
          li.account-nav__item
            h3.account__title Build Your Owns
            p: a(href='') Sign Up
            ul.account-feature__list
              li.account-feature__item -
              li.account-feature__item x
          
          
    footer
      .callout
        .callout__content
          h2.callout__headline
          p.callout__text
          p.callout__phone

      .branding
        .branding__container
          .branding__top
            .branding__logo--left
              img.branding__logo
            .branding__meta--right
              .social-list--inline
                a(href='').facebook
                a(href='').twitter
                a(href='').linkedin
                a(href='').equal-lender
                
          .branding__bottom
            p.fineprint--left copyright
            p.fineprint--right
              a(href='') Visit Commerce Bank
              a(href='') En Espanol

      .disclosures
        .disclosures__content
          h2.disclosures__title
          ul.disclosures__list
            li.disclosures__item text text
            li.disclosures__item text text

          p: a(href='').text-link Deposit Agreement \& Disclosure
