.masthead

  &__container
    //

  &__logo
    display table-cell
    text-align left
    vertical-align middle
    width 25%

  &__utilities
    display table-cell
    text-align right
    width 75%

  // Minor right-hand nav
  &__minor-nav
    text-align right

  &__item
    display inline-block

  &__link
    //

  // Search Form inside minor nav
  &__search
    display inline-block

  &__fieldbox
    display table
    width 100%

  &__input
    border 1px solid cloud
    color green
    display table-cell
    padding  .5rem
    width 75%
    text-align left

  &__button
    display table-cell
    background-color green
    border-radius 0
    border none
    text-align right
    //vertical-align middle
    width 25%
